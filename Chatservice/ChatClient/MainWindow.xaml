<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Chat Messenger" Height="525" Width="350" Background="#FF37E4B5" WindowStyle="ToolWindow" Closed="OnWindowClosed">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition Width="20*"></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="1">
			<Label Content="Message history:" FontSize="10" Foreground="Black"/>
			<Grid Height="300" Background="White">
				<FlowDocumentScrollViewer x:Name="chattextviwer">
					<FlowDocument x:Name="chattext"/>
				</FlowDocumentScrollViewer>
			</Grid>
			<Label Content="Type message:" FontSize="10" Foreground="Black"/>
			<TextBox x:Name="textpad" Height="60" TextWrapping="Wrap" PreviewKeyDown="OnTextPadKeyPressed"/>
			<Grid Height="70">
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Button Grid.Column="0" Content="Send" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="25" Click="OnSendClick"></Button>
				<Button Grid.Column="1" Content="Info" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="25" Click="OnInfoClick"></Button>
				<Button Grid.Column="2" Content="Names" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="25" Click="OnNamesClick"></Button>
			</Grid>
		</StackPanel>
	</Grid>
</Window>
